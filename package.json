{
  "name": "stepmania99",
  "version": "1.0.0",
  "description": "Browser-based multiplayer rhythm game - battle royale style!",
  "type": "module",
  "scripts": {
    "dev": "npm run scan-songs && vite",
    "dev:server": "node server/index.js",
    "dev:all": "npm run scan-songs && concurrently \"npm run dev:server\" \"vite\"",
    "build": "npm run scan-songs && tsc && vite build",
    "preview": "vite preview",
    "scan-songs": "node scripts/generate-songs-manifest.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sderosiaux/stepmania99.git"
  },
  "keywords": [
    "rhythm-game",
    "stepmania",
    "ddr",
    "game",
    "typescript",
    "multiplayer",
    "battle-royale"
  ],
  "author": "sderosiaux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sderosiaux/stepmania99/issues"
  },
  "homepage": "https://github.com/sderosiaux/stepmania99#readme",
  "devDependencies": {
    "jsdom": "^27.2.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  }
}
