{
  "name": "stepmania-web",
  "version": "1.0.0",
  "description": "Browser-based StepMania rhythm game with precision timing",
  "type": "module",
  "scripts": {
    "dev": "npm run scan-songs && vite",
    "build": "npm run scan-songs && tsc && vite build",
    "preview": "vite preview",
    "scan-songs": "node scripts/generate-songs-manifest.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sderosiaux/stepmania-web.git"
  },
  "keywords": ["rhythm-game", "stepmania", "ddr", "game", "typescript"],
  "author": "sderosiaux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sderosiaux/stepmania-web/issues"
  },
  "homepage": "https://github.com/sderosiaux/stepmania-web#readme",
  "devDependencies": {
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  }
}
